@using BasketballTournamentSystem.Core.Models.Player
@model PlayerViewModel

<form method="post" novalidate="novalidate" class="form-valide">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="card">
        <div class="card-body">
            <div class="form-validation">
                <div class="form-group row">
                    <label class="col-lg-4 col-form-label" for="val-username">
                        Name <span class="text-danger">*</span>
                    </label>
                    <div class="col-lg-6">
                        <span asp-validation-for="Name" class="text-danger"></span>
                        <input asp-for="Name" type="text" name="Name" class="form-control" placeholder="Enter player name..">
                    </div>
                </div>
                <div class="form-group row">
                    <label class="col-lg-4 col-form-label" for="val-email">
                        Number <span class="text-danger">*</span>
                    </label>
                    <div class="col-lg-6">
                        <span asp-validation-for="Number" class="text-danger"></span>
                        <input asp-for="Number" type="text" name="Number" class="form-control" placeholder="Enter player number..">
                    </div>
                </div>
                <div class="form-group row">
                    <label class="col-lg-4 col-form-label" for="val-password">
                        Stamina <span class="text-danger">*</span>
                    </label>
                    <div class="col-lg-6">
                        <span asp-validation-for="Stamina" class="text-danger"></span>
                        <input asp-for="Stamina" type="text" name="Stamina" class="form-control" placeholder="Enter player stamina..">
                    </div>
                </div>
                <div class="form-group row">
                    <label class="col-lg-4 col-form-label" for="val-confirm-password">
                        Image Url <span class="text-danger">*</span>
                    </label>
                    <div class="col-lg-6">
                        <span asp-validation-for="ImageUrl" class="text-danger"></span>
                        <input asp-for="ImageUrl" type="text" name="ImageUrl" class="form-control" placeholder="Enter image url..">
                    </div>
                </div>
                <div class="form-group row">
                    <label class="col-lg-4 col-form-label" for="val-suggestions">
                        Scores <span class="text-danger">*</span>
                    </label>
                    <div class="col-lg-6">
                        <span asp-validation-for="Scores" class="text-danger"></span>
                        <input asp-for="Scores" type="text" name="Scores" class="form-control" placeholder="Scores so far..">
                    </div>
                </div>
                <div class="form-group row">
                    <label class="col-lg-4 col-form-label" for="val-suggestions">
                        Speed <span class="text-danger">*</span>
                    </label>
                    <div class="col-lg-6">
                        <span asp-validation-for="Speed" class="text-danger"></span>
                        <input asp-for="Speed" type="text" name="Speed" class="form-control" placeholder="Enter player speed..">
                    </div>
                </div>
                <div class="form-group row">
                    <label class="col-lg-4 col-form-label" for="val-suggestions">
                        Games Won <span class="text-danger">*</span>
                    </label>
                    <div class="col-lg-6">
                        <span asp-validation-for="GamesWon" class="text-danger"></span>
                        <input asp-for="GamesWon" type="text" name="GamesWon" class="form-control" placeholder="Games won so far..">
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-lg-8 ml-auto">
                        <button asp-controller="Player" asp-action="AddPlayer" type="submit" method="post" class="btn btn-primary">Submit</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>

@section Scripts {
<partial name="_ValidationScriptsPartial" />
}