@using BasketballTournamentSystem.Core.Models.Player
@model List<PlayerViewModel>

<div class="container-fluid">
    <div class="row">
        <div class="col-12 m-b-30">
            <h4 class="d-inline">These are all the players</h4>
            <p class="text-muted">with no team ofcourse</p>
            <div class="row">
                @foreach (var player in Model)
                {
                    <div class="col-md-6 col-lg-3">
                        <div class="card">
                            <img class="img-fluid" src="@player.ImageUrl" alt="">
                            <div class="card-body">
                                <h5 class="card-title">@player.Name</h5>
                                <p class="card-text">Speed: @player.Speed Stamina: @player.Stamina Scores: @player.Scores</p>
                                <p class="card-text">
                                    <small class="text-muted">Number: @player.Number</small>
                                </p>
                                <form method="post">
                                    <button asp-controller="Player" asp-action="PlayerDetails" asp-route-Id="@player.Id" class="btn mb-1 btn-rounded btn-info">Details</button>
                                </form>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>